@page "/not-found/en"

<div class="not-found">
    <div class="container">
    <div class="header">
        <h1>404</h1>
        <p>Oops! The page you are looking for does not exist.</p>
    </div>
    <div class="gif-container">
        <img src="/Images/404.jpg" alt="Person drawing animation">
    </div>
    <a href="/" class="home-link">Go to Homepage</a>
</div>
<div class="background-elements">
    <div class="circle"></div>
    <div class="square"></div>
    <div class="triangle"></div>
</div>
</div>

<style>
    img {
        margin: 0 auto;
    }
    
    .not-found {
        background-color: #e4d4c8;
        color: #60480a;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        margin: 0;
        padding: 9rem 5rem 1rem;
        overflow: hidden;
    }

    .container {
        max-width: 800px;
        padding: 40px;
        border: 5px solid #60480a;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        position: relative;
        z-index: 10;
    }

    .container:hover {
        transform: scale(1.02);
    }

    .header {
        animation: fadeInDown 1s ease-in-out;
    }

    h1 {
        font-size: 5em;
        margin: 0;
        color: #a67c00;
        animation: textGlow 1.5s ease-in-out infinite alternate;
    }

    p {
        font-size: 1.5em;
        margin: 20px 0;
    }

    .gif-container {
        margin: 20px 0;
        border: 3px solid #60480a;
        border-radius: 10px;
        overflow: hidden;
        animation: fadeInUp 1s ease-in-out;
    }

    .gif-container img {
        max-width: 100%;
        height: auto;
        display: block;
    }

    .home-link {
        display: inline-block;
        margin-top: 20px;
        padding: 15px 30px;
        font-size: 1.2em;
        text-decoration: none;
        color: #e4d4c8;
        background-color: #60480a;
        border-radius: 10px;
        transition: background-color 0.3s, transform 0.3s;
    }

    .home-link:hover {
        background-color: #4a3807;
        transform: translateY(-5px);
    }

    .background-elements .circle,
    .background-elements .square,
    .background-elements .triangle {
        position: absolute;
        border: 2px solid #60480a;
        opacity: 0.2;
        animation: move 10s infinite alternate;
    }

    .background-elements .circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        top: 20%;
        left: 10%;
    }

    .background-elements .square {
        width: 100px;
        height: 100px;
        top: 40%;
        left: 80%;
    }

    .background-elements .triangle {
        width: 0;
        height: 0;
        border-left: 50px solid transparent;
        border-right: 50px solid transparent;
        border-bottom: 100px solid #60480a;
        top: 70%;
        left: 30%;
    }

    @@keyframesfadeInDown {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframesfadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframestextGlow {
        0% {
            text-shadow: 0 0 10px rgba(166, 124, 0, 0.7);
        }

        100% {
            text-shadow: 0 0 20px rgba(166, 124, 0, 1);
        }
    }

    @@keyframesmove {
        0% {
            transform: translateX(0) translateY(0);
        }

        100% {
            transform: translateX(100px) translateY(100px);
        }
    }

    @@media(max - width: 1200px) {
        .container {
            max-width: 90%;
        }

        h1 {
            font-size: 4em;
        }

        p {
            font-size: 1.3em;
        }

        .home-link {
            padding: 12px 24px;
            font-size: 1.1em;
        }
    }

    @@media(max - width: 768px) {
        .container {
            padding: 30px;
        }

        h1 {
            font-size: 3em;
        }

        p {
            font-size: 1.2em;
        }

        .home-link {
            padding: 10px 20px;
            font-size: 1em;
        }
    }

    @@media(max - width: 480px) {
        .container {
            padding: 20px;
        }

        h1 {
            font-size: 2.5em;
        }

        p {
            font-size: 1em;
        }

        .home-link {
            padding: 8px 16px;
            font-size: 0.9em;
        }
    }

    a:hover {
        color: #e4d4c8;
    }
</style>