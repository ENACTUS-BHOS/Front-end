@inherits LayoutComponentBase

@inject NavigationManager navigationManager

<div class="page">
    <main>
        <div class="top-row px-4">
            @if (this.navigationManager.BaseUri == this.navigationManager.Uri)
            {
                <a class="logo" href="/">
                    <img src="/Images/logo.png" />
                </a>

                <div class="navigation-container">
                <a class="navigation-link" href="/">Ana səhifə</a>

                <a class="navigation-link" href="/Works">Əl işləri</a>

                <a class="navigation-link" href="/Tutorials">Təlimlər</a>

                <a class="navigation-link" href="/Exhibitions">Sərgilər</a>

                <a class="navigation-link" href="/AboutUs">Haqqımızda</a>

                <div class="lang-menu">
                    <div class="selected-lang navigation-link">
                        <img src="/Images/@(currentLanguage).png" />@currentLanguage
                    </div>
                    <ul>
                        <li @onclick="SelectEnglish">
                            <img src="/Images/Eng.png" />English
                        </li>

                        <li @onclick="SelectAzerbaijani">
                            <img src="/Images/Aze.png" />Azərbaycan
                        </li>
                    </ul>
                </div>
            </div>
            }
            else
            {
                <a class="logo" href="/">
                    <img src="/Images/dark-logo.png" />
                </a>

                <div class="navigation-container">
                <a style="color: #60480b" class="navigation-link" href="/">Ana səhifə</a>

                <a style="color: #60480b" class="navigation-link" href="/Works">Əl işləri</a>

                <a style="color: #60480b" class="navigation-link" href="/Tutorials">Təlimlər</a>

                <a style="color: #60480b" class="navigation-link" href="/Exhibitions">Sərgilər</a>

                <a style="color: #60480b" class="navigation-link" href="/AboutUs">Haqqımızda</a>

                <div class="lang-menu">
                    <div class="selected-lang dark navigation-link">
                        @currentLanguage
                    </div>
                    <ul>
                        <li>
                            English
                        </li>
                        <li>
                            Azərbaycan
                        </li>
                    </ul>
                </div>
            </div>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    public string currentLanguage = "Aze";

    public void SelectEnglish()
    {
        currentLanguage = "Eng";
    }

    public void SelectAzerbaijani()
    {
        currentLanguage = "Aze";
    }
}